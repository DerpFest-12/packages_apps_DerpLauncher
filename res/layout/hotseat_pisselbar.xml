<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pisselbar_height"
    android:orientation="horizontal"
    android:paddingStart="@dimen/pisselbar_horizontal_padding"
    android:paddingTop="@dimen/pisselbar_vertical_padding"
    android:paddingEnd="@dimen/pisselbar_horizontal_padding"
    android:paddingBottom="@dimen/pisselbar_vertical_padding">

    <LinearLayout
        android:id="@+id/pisselbar_content"
        android:background="@drawable/bg_hotseat_searchbox"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/pisselbar_btn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pisselbar_icon_padding"
        android:paddingStart="@dimen/pisselbar_icon_padding_side"
        android:src="@drawable/searchbox_ic_google"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/pisselbar_btn_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/pisselbar_icon_padding"
        android:src="@drawable/searchbox_ic_assistant"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/pisselbar_btn_lens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/pisselbar_icon_padding"
        android:paddingEnd="@dimen/pisselbar_icon_padding_side"
        android:src="@drawable/searchbox_ic_lens"
        tools:ignore="RtlSymmetry" />

    </LinearLayout>

</LinearLayout>
